<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <stroke android:color="@color/black_15" android:width="1dp"/>
        </shape>
    </item>

    <!-- bottom border -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <!--stroke android:color="#246921" android:width="2dp"/-->
        </shape>
    </item>

    <!-- remove border on the left side to align with word start -->
    <item android:width="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>